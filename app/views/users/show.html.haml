.wrapper 
  = render 'shared/header'
  - breadcrumb :my_items
  = render "/shared/breadCrumb"
  .wrapper__main
    .mp-container
      = render 'shared/myPageSideBar'
      .mp-container__mp-content
        .main__single-container
          %h2.main__single-container__head 出品した商品一覧
        %section.my-items-container
          .my-items-container__contents
            .my-items-container__contents__list.is-active
              %ul.my-items-container__contents__list__items
                = render partial: "my-items", collection: @items, as: :item
            .page-number
              = @items.current_page
          .my-pagenate
            = paginate(@items)
    = link_to new_item_path, class: 'sell-icon' do
      = render 'shared/sell-icon'

  = render "/shared/footerFirst"
  = render "/shared/footerSecond"